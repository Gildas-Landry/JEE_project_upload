<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>SubmitArticleServlet</servlet-name>
        <servlet-class>com.articles.publication.servlets.SubmitArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitArticleServlet</servlet-name>
        <url-pattern>/submitArticle</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ValidateArticleServlet</servlet-name>
        <servlet-class>com.articles.publication.servlets.ValidateArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidateArticleServlet</servlet-name>
        <url-pattern>/validateArticle</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.articles.publication.servlets.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/adminDashboard</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserDashboard</servlet-name>
        <servlet-class>com.articles.publication.servlets.UserDashboard</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserDashboard</servlet-name>
        <url-pattern>/userDashboard</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>DownloadFileServlet</servlet-name>
        <servlet-class>com.articles.publication.servlets.DownloadFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadFileServlet</servlet-name>
        <url-pattern>/downloadFile</url-pattern>
    </servlet-mapping>
    
    
    <welcome-file-list>
        <welcome-file>userDashboard</welcome-file>
    </welcome-file-list>
</web-app>
